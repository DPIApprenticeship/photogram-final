<div>
  <div>
    <h1>
      Photo #<%= @the_photo.id %> details
    </h1>

    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>

      <% if @the_photo.owner_id == @current_user.id%>
        <div>
          <a href="/delete_photo/<%= @the_photo.id %>">
            Delete this photo
          </a>
        </div>
      <% end %>
    </div>

    <dl>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>">
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.user.username %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments.count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>

      <dt>Fans</dt>
      <dd>
        <% fan_string = "" %>
        <% @the_photo.likes.each_with_index do |like, index| %>
          <% if index == @the_photo.likes.count - 1 %>
            <% fan_string += "and #{like.user.username}"%>
          <% else %>
            <% fan_string += "#{like.user.username}, "%>
          <% end %>
        <% end %>
        <%= fan_string %>
      </dd>

      <dt>
        Add a fan
      </dt>
      <dd>
        <% if !@already_liked %>
          <form action="/insert_like" method="post">
            <input type="hidden" name="query_photo_id" value="<%= @the_photo.id %>">
            <button>Like</button>
          </form>
        <% else %>
          <a href="/delete_like/<%= @like_id %>">Unlike</a>
        <% end %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption"><%= @the_photo.caption %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count" value="<%= @the_photo.likes_count %>">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_photo.owner_id %>">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count" value="<%= @the_photo.comments_count %>">
      </div>

      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |comment| %>
    <tr>
      <td><%= comment.user.username %></td>
      <td><%= comment.body %></td>
      <td><%= time_ago_in_words(comment.created_at) %></td>
    </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>
<form action="/insert_comment" method="post">
  <input type="hidden" name="query_photo_id" value="<%= @the_photo.id %>">
  <label for="comment">Comment</label>
  <textarea id="comment" name="query_body"></textarea>
  <button>Add comment</button>
</form>
