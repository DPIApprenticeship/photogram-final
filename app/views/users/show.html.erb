<h1><%= @user.username %></h1>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>
  <% @photos.each do |photo| %>
    <tr>
      <td><img src="<%= photo.image %>"></td>
      <td><%= @user.username %></td>
      <td><%= photo.caption %></td>
      <td><%= time_ago_in_words(photo.created_at) %></td>
      <td><%= photo.likes %></td>
      <td><a href="/photos/<%= photo.id %>">Show details<a></td>
    </tr>
  <% end %>
</table>
